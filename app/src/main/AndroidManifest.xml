<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.acar.sample.cast.carreceiver">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cast_video"
        android:label="@string/app_name"
        android:name="com.acar.sample.cast.carreceiver.CastDemoApplication"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="com.acar.sample.cast.carreceiver.ui.MainActivity"
            android:banner="@drawable/cast_video"
            android:icon="@drawable/cast_video"
            android:label="@string/app_name"
            android:logo="@drawable/cast_video"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.google.android.gms.cast.tv.action.LAUNCH" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.acar.sample.cast.carreceiver.ui.PlaybackActivity"
            android:exported="true"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="com.google.android.gms.cast.tv.action.LOAD"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <!-- Uncomment and populate data fields to enable load by entity deeplinks -->
            <!--intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="https"/>
                <data android:host="YOUR-DEEPLINK-HOST-URL"/>
                <data android:pathPattern=".*"/>
            </intent-filter-->
        </activity>
        <meta-data
            android:name="com.google.android.gms.cast.tv.RECEIVER_OPTIONS_PROVIDER_CLASS_NAME"
            android:value="com.acar.sample.cast.atvreceiver.CastReceiverOptionsProvider" />
    </application>
</manifest>